<!DOCTYPE html>
<html>
<head>
    <title>Iran IP List for MikroTik</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        pre { background: #f0f0f0; padding: 15px; border-radius: 5px; }
        button { padding: 10px 20px; background: #007bff; color: white; border: none; cursor: pointer; }
    </style>
</head>
<body>
    <h1>Iran IP List (MikroTik Format)</h1>
    <button onclick="fetchIPs()">Generate IP List</button>
    <pre id="output"></pre>

    <script>
        async function fetchIPs() {
            try {
                const response = await fetch('https://www.ipdeny.com/ipblocks/data/countries/ir.zone');
                const data = await response.text();
                const mikrotikFormat = data.split('\n')
                    .filter(line => line.trim() !== '')
                    .map(line => `add address=${line.trim()} list=IP2Location`)
                    .join('\n');
                
                const output = `/ip firewall address-list\n${mikrotikFormat}`;
                document.getElementById('output').textContent = output;
                
                // کپی خودکار به کلیپ‌بورد
                navigator.clipboard.writeText(output);
                alert('Copied to clipboard!');
            } catch (error) {
                document.getElementById('output').textContent = 'Error fetching IP list!';
            }
        }
    </script>
</body>
</html>
